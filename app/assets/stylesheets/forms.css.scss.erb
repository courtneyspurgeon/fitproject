/*Pagination
----------------------------      */

.pagination_wrap {
  margin: 50px auto 20px;
  width: 100%;

  .pagination {
      height: 36px;
      display: table;
      margin: auto;


    a, span, .current  {
      float: left;
      padding: 0 14px;
      line-height: 34px;
      text-decoration: none;
      border: 1px solid #ddd;
      border-left-width: 0;
    }
    a:hover,
    .current {
      background-color: #f5f5f5;
    }
    .current a {
      color: #999999;
      cursor: default;
    }
    .disabled span,
    .disabled a,
    .disabled a:hover {
      color: #999999;
      background-color: transparent;
      cursor: default;
    }
    a:first-child, .previous_page.disabled  {
      border-left-width: 1px;
    }
    
  } /* end pagination */
} /* end pagination_wrap */



